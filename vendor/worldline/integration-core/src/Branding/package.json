{
  "name": "online-payments-core-admin-fe",
  "version": "1.0.0",
  "dependencies": {
    "dotenv": "^16.5.0",
    "eslint": "^8.31.0",
    "prettier": "^2.8.1",
    "sass": "1.57.1",
    "serve": "^14.1.2"
  },
  "scripts": {
    "build-all": "./build.sh",
    "build-brand": "./build.sh",
    "build-test-css": "node_modules/.bin/sass --no-source-map ../BusinessLogic/AdminConfig/Resources/test/index.scss ../BusinessLogic/AdminConfig/Resources/test/resources/css/op-core.css",
    "build-components-demo-css": "node_modules/.bin/sass --no-source-map ../BusinessLogic/AdminConfig/Resources/test/design-demo/index.scss ../BusinessLogic/AdminConfig/Resources/test/resources/css/design-demo.css",
    "copy-test-js": "cp ../BusinessLogic/AdminConfig/Resources/src/services/* ../BusinessLogic/AdminConfig/Resources/src/controllers/* ../BusinessLogic/AdminConfig/Resources/src/components/**/*.js ../BusinessLogic/AdminConfig/Resources/test/resources/js",
    "copy-test-assets": "node merge-langs.js && cp -r ../BusinessLogic/AdminConfig/Resources/src/design/assets ../Branding/WOP/design/assets ../BusinessLogic/AdminConfig/Resources/test/resources",
    "build-test": "yarn build-test-css && yarn build-components-demo-css && yarn copy-test-js && yarn copy-test-assets",
    "start": "node_modules/.bin/concurrently \"nodemon --exec 'yarn build-test'\" \"nodemon ../BusinessLogic/AdminConfig/Resources/test/app.js\"",
    "copy-dist-js": "cp ../BusinessLogic/AdminConfig/Resources/src/services/* ../BusinessLogic/AdminConfig/Resources/src/controllers/* ../BusinessLogic/AdminConfig/Resources/src/components/**/*.js ../BusinessLogic/AdminConfig/Resources/dist/resources/js",
    "copy-dist-assets": "cp -r ../BusinessLogic/AdminConfig/Resources/src/design/assets ../BusinessLogic/AdminConfig/Resources/src/lang ../BusinessLogic/AdminConfig/Resources/src/templates ../BusinessLogic/AdminConfig/Resources/dist/resources",
    "build-dist-css": "node_modules/.bin/sass --no-source-map ../BusinessLogic/AdminConfig/Resources/dist/index.scss ../BusinessLogic/AdminConfig/Resources/dist/resources/css/op-core.css",
    "dist": "yarn build-dist-css && yarn copy-dist-js && yarn copy-dist-assets && cp ../BusinessLogic/AdminConfig/Resources/test/index.html ../BusinessLogic/AdminConfig/Resources/dist"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "express": "5.0.0",
    "html-webpack-plugin": "^5.6.3",
    "live-server": "^1.2.2",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^2.0.20",
    "open": "^8.4.0",
    "sass-loader": "^13.2.2",
    "string-replace-loader": "^3.2.0",
    "style-loader": "^3.3.2",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "dompurify": "^3.2.5"
  }
}
